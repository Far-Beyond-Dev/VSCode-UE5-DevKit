{
  "name": "ue5-dev-tools",
  "displayName": "UE5.6 Development Tools",
  "description": "Comprehensive Unreal Engine 5.6 development tools for VS Code",
  "version": "1.0.1",
  "publisher": "ue5-dev",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Debuggers"
  ],
  "keywords": [
    "unreal",
    "ue5",
    "gamedev",
    "cpp"
  ],
  "activationEvents": [
    "workspaceContains:**/*.uproject"
  ],
  "main": "./out/extension.js",
  "files": [
    "out/**/*",
    "resources/**/*",
    "package.json",
    "README.md"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ue5.openEngine",
        "title": "Open Unreal Engine",
        "category": "UE5",
        "icon": "$(rocket)"
      },
      {
        "command": "ue5.generateProjectFiles",
        "title": "Generate Project Files",
        "category": "UE5",
        "icon": "$(file-code)"
      },
      {
        "command": "ue5.buildDevelopment",
        "title": "Build Development",
        "category": "UE5",
        "icon": "$(tools)"
      },
      {
        "command": "ue5.buildShipping",
        "title": "Build Shipping",
        "category": "UE5",
        "icon": "$(package)"
      },
      {
        "command": "ue5.buildDebug",
        "title": "Build DebugGame",
        "category": "UE5",
        "icon": "$(bug)"
      },
      {
        "command": "ue5.cleanBuild",
        "title": "Clean Build",
        "category": "UE5",
        "icon": "$(trash)"
      },
      {
        "command": "ue5.cookContent",
        "title": "Cook Content",
        "category": "UE5",
        "icon": "$(flame)"
      },
      {
        "command": "ue5.packageProject",
        "title": "Package Project",
        "category": "UE5",
        "icon": "$(archive)"
      },
      {
        "command": "ue5.refreshSolutionExplorer",
        "title": "Refresh",
        "category": "UE5",
        "icon": "$(refresh)"
      },
      {
        "command": "ue5.openFile",
        "title": "Open File",
        "category": "UE5"
      },
      {
        "command": "ue5.buildPlugin",
        "title": "Build Plugin",
        "category": "UE5",
        "icon": "$(tools)"
      },
      {
        "command": "ue5.refreshCppConfig",
        "title": "Refresh C++ Configuration",
        "category": "UE5",
        "icon": "$(gear)"
      }
    ],
    "views": {
      "ue5-explorer": [
        {
          "id": "ue5SolutionExplorer",
          "name": "UE5 Solution Explorer",
          "when": "ue5.projectDetected"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ue5-explorer",
          "title": "UE5 Tools",
          "icon": "$(game)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ue5.refreshSolutionExplorer",
          "when": "view == ue5SolutionExplorer",
          "group": "navigation"
        },
        {
          "command": "ue5.refreshCppConfig",
          "when": "view == ue5SolutionExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "ue5.openFile",
          "when": "view == ue5SolutionExplorer && viewItem == file"
        },
        {
          "command": "ue5.buildPlugin",
          "when": "view == ue5SolutionExplorer && viewItem == buildablePlugin",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "ue5.openEngine",
          "when": "ue5.projectDetected"
        },
        {
          "command": "ue5.generateProjectFiles",
          "when": "ue5.projectDetected"
        },
        {
          "command": "ue5.buildDevelopment",
          "when": "ue5.projectDetected"
        },
        {
          "command": "ue5.buildShipping",
          "when": "ue5.projectDetected"
        },
        {
          "command": "ue5.buildDebug",
          "when": "ue5.projectDetected"
        },
        {
          "command": "ue5.cleanBuild",
          "when": "ue5.projectDetected"
        },
        {
          "command": "ue5.cookContent",
          "when": "ue5.projectDetected"
        },
        {
          "command": "ue5.packageProject",
          "when": "ue5.projectDetected"
        },
        {
          "command": "ue5.refreshCppConfig",
          "when": "ue5.projectDetected"
        }
      ]
    },
    "configuration": {
      "title": "UE5 Development Tools",
      "properties": {
        "ue5.enginePath": {
          "type": "string",
          "default": "",
          "description": "Path to Unreal Engine 5.6 installation"
        },
        "ue5.defaultBuildConfiguration": {
          "type": "string",
          "enum": ["Development", "DebugGame", "Shipping", "Test"],
          "default": "Development",
          "description": "Default build configuration"
        },
        "ue5.defaultPlatform": {
          "type": "string",
          "enum": ["Win64", "Mac", "Linux"],
          "default": "Win64",
          "description": "Default target platform"
        },
        "ue5.showBuildOutput": {
          "type": "boolean",
          "default": true,
          "description": "Show build output in terminal"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
